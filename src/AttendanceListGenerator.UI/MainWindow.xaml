<Window x:Class="AttendanceListGenerator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceListGenerator.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid MaxWidth="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- People TextBoxes -->
        <StackPanel Grid.RowSpan="2" Grid.Column="0">

            <TextBlock Text="People" FontFamily="{StaticResource LatoLight}" FontSize="32" HorizontalAlignment="Center" Margin="0 10 0 0"/>

            <TextBox Text="{Binding Fullnames[0]}" Tag="Fullname" />
            <TextBox Text="{Binding Fullnames[1]}" Tag="Fullname" />
            <TextBox Text="{Binding Fullnames[2]}" Tag="Fullname" />
            <TextBox Text="{Binding Fullnames[3]}" Tag="Fullname" />
            <TextBox Text="{Binding Fullnames[4]}" Tag="Fullname" />
            <TextBox Text="{Binding Fullnames[5]}" Tag="Fullname" />
            <TextBox Text="{Binding Fullnames[6]}" Tag="Fullname" />

        </StackPanel>
        
        <!-- Data -->
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Data" FontFamily="{StaticResource LatoLight}" FontSize="32" HorizontalAlignment="Center" Margin="0 10 0 0"/>

            <TextBlock Text="Year" FontSize="14" FontFamily="{StaticResource LatoLight}" Foreground="{StaticResource DarkGreyBrush}" 
                       HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <Grid Margin="50 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="{StaticResource LeftArrowIcon}" FontFamily="{StaticResource Segoe-MDL2}" 
                        Padding="10" Command="{Binding PreviousYearCommand}" />

                <Viewbox Grid.Column="1" StretchDirection="DownOnly">
                    <TextBlock Text="{Binding Year, FallbackValue=2019}" FontFamily="{StaticResource LatoRegular}" 
                               FontSize="22" Foreground="{StaticResource DarkGreyBrush}" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Padding="5 0 5 0"/>
                </Viewbox>
                
                <Button Grid.Column="2" Content="{StaticResource RightArrowIcon}" FontFamily="{StaticResource Segoe-MDL2}" 
                        Padding="10" Command="{Binding NextYearCommand}" />
            </Grid>

            <TextBlock Text="Month" FontSize="14" FontFamily="{StaticResource LatoLight}" Foreground="{StaticResource DarkGreyBrush}" 
                       HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <Grid Margin="30 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="{StaticResource LeftArrowIcon}" FontFamily="{StaticResource Segoe-MDL2}" Padding="10"  
                        Command="{Binding PreviousMonthCommand}"/>

                <Viewbox Grid.Column="1" StretchDirection="DownOnly">
                    <TextBlock Text="{Binding Month, FallbackValue=September}" FontFamily="{StaticResource LatoRegular}" 
                               FontSize="22" Foreground="{StaticResource DarkGreyBrush}" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Padding="5 0 5 0"/>
                </Viewbox>

                <Button Grid.Column="2" Content="{StaticResource RightArrowIcon}" FontFamily="{StaticResource Segoe-MDL2}" Padding="10" 
                        Command="{Binding NextMonthCommand}"/>
            </Grid>

            <TextBlock Text="Settings" FontFamily="{StaticResource LatoLight}" FontSize="32" HorizontalAlignment="Center"/>

            <StackPanel Margin="30 0">

                <CheckBox Margin="0 0 5 0" FontFamily="{StaticResource LatoRegular}" FontSize="14" Content="Enable colors" />
                <CheckBox Margin="0 0 5 0" FontFamily="{StaticResource LatoRegular}" FontSize="14" Content="Enable sunday text" />
                <CheckBox Margin="0 0 5 0" FontFamily="{StaticResource LatoRegular}" FontSize="14" Content="Enable day off text" />
                <CheckBox Margin="0 0 5 0" FontFamily="{StaticResource LatoRegular}" FontSize="14" Content="Enable colors" />

            </StackPanel>
        </StackPanel>

       

        <!-- Generate button -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom">
            <Button Content="Generate" Command="{Binding GenerateCommand}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
