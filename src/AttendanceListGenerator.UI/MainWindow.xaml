<Window x:Class="AttendanceListGenerator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceListGenerator.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Grid Grid.Row="0" Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Column="0" Grid.Row="0" Content="Previous" Command="{Binding PreviousYearCommand}"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Year}" HorizontalAlignment="Center"/>
                <Button Grid.Column="2" Grid.Row="0" Content="Next" Command="{Binding NextYearCommand}"/>

                <Button Grid.Column="0" Grid.Row="1" Content="Previous" Command="{Binding PreviousMonthCommand}"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Month}" HorizontalAlignment="Center"/>
                <Button Grid.Column="2" Grid.Row="1" Content="Next" Command="{Binding NextMonthCommand}"/>

            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Fullnames[0]}"/>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Fullnames[1]}"/>
                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Fullnames[2]}"/>
                <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Fullnames[3]}"/>
                <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Fullnames[4]}"/>
                <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding Fullnames[5]}"/>
                <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding Fullnames[6]}"/>

                <Button Grid.Column="1" Grid.Row="7" Content="Generate" Command="{Binding GenerateCommand}"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
