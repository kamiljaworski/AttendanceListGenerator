<Window x:Class="AttendanceListGenerator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceListGenerator.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid MaxWidth="500" Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Data -->
        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock Text="Data" FontFamily="Tahoma" FontSize="24" HorizontalAlignment="Center" Margin="0 10 0 0"/>
            
            <TextBlock Text="Year" FontFamily="Tahoma" HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Prev" Command="{Binding PreviousYearCommand}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{Binding Year, FallbackValue=2019}" FontFamily="Tahoma" FontSize="24" Margin="10 0" TextAlignment="Center"/>
                <Button Grid.Column="3" Content="Next" Command="{Binding NextYearCommand}" VerticalAlignment="Center"/>
            </Grid>

            <TextBlock Text="Month" FontFamily="Tahoma" HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Prev" Command="{Binding PreviousMonthCommand}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{Binding Month, FallbackValue=January}" FontFamily="Tahoma" FontSize="24" Margin="10 0" TextAlignment="Center"/>
                <Button Grid.Column="3" Content="Next" Command="{Binding NextMonthCommand}" VerticalAlignment="Center"/>
            </Grid>

            <TextBlock Text="People" FontFamily="Tahoma" HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <TextBox Text="{Binding Fullnames[0]}" Margin="40 5 40 2"/>
            <TextBox Text="{Binding Fullnames[1]}" Margin="40 2"/>
            <TextBox Text="{Binding Fullnames[2]}" Margin="40 2"/>
            <TextBox Text="{Binding Fullnames[3]}" Margin="40 2"/>
            <TextBox Text="{Binding Fullnames[4]}" Margin="40 2"/>
            <TextBox Text="{Binding Fullnames[5]}" Margin="40 2"/>
            <TextBox Text="{Binding Fullnames[6]}" Margin="40 2"/>
        </StackPanel>
        
        <!-- Settings -->
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Settings" FontFamily="Tahoma" FontSize="24" HorizontalAlignment="Center" Margin="0 10 0 0"/>

            <StackPanel Orientation="Horizontal">
                <CheckBox/>
                <TextBlock Text="Enable colors"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox/>
                <TextBlock Text="Enable day off text"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox/>
                <TextBlock Text="Enable sunday text"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox/>
                <TextBlock Text="Enable Colors"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Generate button -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button Content="Generate" Command="{Binding GenerateCommand}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
